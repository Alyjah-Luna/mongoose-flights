<%- include('../partials/header') %>

<nav>
  <a href="/">Home</a>
  <a href="/flights/new">New Flight</a>
</nav>

<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Flight Number</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach((f) => { %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.flightNumber %></td>
        <td><a href="/flights/<%= f._id %>">Details</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
